<section class="w-100 row justify-content-center">
    <div class="col-10 col-md-6 col-lg-5">
        <div class="text-center">
            <button type="button" class="btn" data-toggle="modal" data-target="#planningModal">Plan Your Trip</button>
        </div>
    </div>
</section>

<div class="modal fade" id="planningModal" tabindex="-1" role="dialog" aria-labelledby="planningModalTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content" style="color: black; background-color: white;">
            <div class="modal-header text-center">
                <h5 class="modal-title text-center text-black" id="planningModalTitle">Plan your trip to Tokyo</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="container justify-content-center">
                <form action="" id="api-inputs">
                    <section class="row justify-content-center">
                        <div class="col-12 col-sm-6 text-center">
                            <label for="leaving">Leaving on:</label>
                            <input type="date" id="leaving" name="leaving">
                        </div>
                        <div class="col-12 col-sm-6 text-center">
                            <label for="returning">Returning on:</label>
                            <input type="date" id="returning" name="returning">
                        </div>
                        <label for="leaving">Leaving from:</label>
                        <input type="text" id="start-city" name="start-city">
                    </section>

                    <p class="text-center">
                        <label for="amount">Max Spending on Budget:</label>
                        <input type="number" id="amount" style=" color:#733D8E; font-weight:bold; margin-top: 50px;">
                    </p>
                    <div class="row mt-5 mb-5">
                        <div class="col-12 col-sm-6">
                            <div class="text-center">
                                <button type="button" class="btn w-50"
                                    style="background-color: #733D8E; color: white;">CANCEL</button>
                            </div>
                        </div>
                        <div class="col-12 col-sm-6">
                            <div class="text-center">
                                <button type="submit" class="btn w-50" data-toggle="modal"
                                    data-target="#destinationModal" style="background-color: #733D8E; color: white;"
                                    value='Submit'>NEXT</button>
                            </div>
                        </div>
                    </div>
                </form>
                <div class="row mt-5 mb-5">
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="/js/script.js"></script>